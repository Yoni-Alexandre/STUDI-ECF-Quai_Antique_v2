{% extends 'base.html.twig' %}

{% block title %}Le Quai Antique - Nos Menus{% endblock %}

{% block content %}
    <main class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <h1 class="text-center">Nos Menus</h1>
            </div>
            {% for menu in menus %}
                <div class="col-12 col-sm-6 col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title text-center">{{ menu.title}}</h2>
                            <span class="carte-subtitle text-center">{{ menu.subtitle }}</span>
                            <hr class="featurette-divider my-3">
                            <span class="carte-price d-block text-center">{{ (menu.price / 100) | number_format(2, ',', '.') }} â‚¬</span>
                            <p class="menu-p">{{ menu.optionOne }}</p>
                            <p class="menu-p">{{ menu.optionTwo }}</p>
                            <p class="menu-p">{{ menu.optionThree }}</p>
                            <p class="menu-p">{{ menu.optionFour }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </main>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="{{ asset('assets/js/lequaiantique.js') }}"></script>
{% endblock %}
