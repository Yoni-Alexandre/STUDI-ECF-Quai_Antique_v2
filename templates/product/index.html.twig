{% extends 'base.html.twig' %}

{% block title %}Le Quai Antique - Nos produits{% endblock %}


{% block content %}
    <h1>Nos produits</h1>
    <div class="row">

        {%  for product in products %}
            <div class="col-md-4 my-auto">
                <div class="carte-item text-center">
                    <a href="{{ path('product', { 'slug' : product.slug }) }}">
                        <img src="/uploads/images/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">
                    </a>
                    <h5>{{ product.name }}</h5>
                    <span class="carte-subtitle">{{ product.subtitle }}</span>
                    <span class="carte-price">{{ (product.price /100) | number_format(2, ',', '.') }} â‚¬</span>
                </div>
            </div>
        {% endfor %}

    </div>
{% endblock %}
