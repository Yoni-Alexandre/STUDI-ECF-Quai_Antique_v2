{% extends 'base.html.twig' %}

{% block title %}Le Quai Antique - Notre carte{% endblock %}

{% block content %}
    <main class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <h1 class="text-center">Notre carte</h1>
                <img src="{{ asset('uploads/imagesFixes/Le-quai-antique - carte.png') }}" class="img-fluid" alt="Image de présentation des catégories">
            </div>
            {% for category in categories %}
                <div class="col-12 col-sm-6 col-md-4 mb-4">
                    <div class="animation-card card h-100">
                        <div class="card-body">
                            <h3 class="card-title text-center">{{ category.name }}</h3>
                            <a href="{{ path('categories_list', {'slug': category.slug}) }}" class="btn btn-primary btn-block">Voir nos {{ category.name }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </main>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="{{ asset('assets/js/lequaiantique.js') }}"></script>
{% endblock %}
