{% extends 'base.html.twig' %}

{% block title %}Le Quai Antique -  Notre carte{% endblock %}

{% block content %}
    <main class="justify-content-center container">
        <section class="row">
            <div class="col-12">
                <h1>Notre carte</h1>
                <img src="{{ asset('uploads/images/Le-quai-antique - carte.png') }}" class="card-img-top" alt="Image de présentation des catégories">
            </div>
            {% for category in categories %}
                <div class="col-4 text-center">
                    <div class="animation-card card h-100">
{#                        <img src="/uploads/images/{{ products[1].illustration }}" class="card-img-top" alt="Placer une image">#}
                        <div class="card-body">
                            <h3 class="card-title">{{ category.name}}</h3>
                            <a href="{{ path('categories_list', {'slug': category.slug}) }}" class="btn btn-primary">Voir nos plats</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </section>
    </main>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="{{ asset('assets/js/lequaiantique.js') }}"></script>
{% endblock %}